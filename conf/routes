# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /signup                     controllers.Application.signup
GET     /logout                     controllers.Application.logout
GET     /expense                    controllers.Application.expense
GET     /report                     controllers.Application.report
GET     /graph                      controllers.Application.graph

POST    /users                      controllers.UserController.signup
GET     /users/:id                  controllers.UserController.login(id: String)
GET     /expenses                   controllers.ExpenseController.getAll
POST    /expenses                   controllers.ExpenseController.create

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
